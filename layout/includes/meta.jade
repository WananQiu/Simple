mixin meta(article)
  .meta
    h2.article-title
      if article.link
        a(href=article.link, target='_blank')
          !=article.title
      else
        - var rulRegex = /(\/index\.html?$)|(\/?$)/;
        - var path = article.path.replace(rulRegex, '');
        a(href=url_for(path))
          !=article.title
    .article-date
      a.extra-switch(href='javascript:void(0);')
        include post-meta
        +date(article.date)
  .extra
    +extra(__('tags'), article.tags)
  .extra
    +extra(__('categories'), article.categories)
